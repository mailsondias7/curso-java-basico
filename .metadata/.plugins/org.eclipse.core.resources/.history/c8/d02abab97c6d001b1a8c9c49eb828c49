package com.teste.cursojava.aula01;

public class VariavelChar {

	public static void main(String[] args) {
		
		//char o = 'o';
		//char i = 'i';
		
		//forma 2
		char o = 111;
		char i = 105;
		char exclamacao = 33; // valor '!'
		
		System.out.println("Saudação: " + "" + o + i + exclamacao);

	}

}
