package com.teste.cursojava.exercicios;

import java.util.Scanner;

public class VerificarNumeroNegativo {

	public static void main(String[] args) {

		Scanner scan = new Scanner(System.in);

		System.out.println("Verificar de Número Positivo ou Negativo");

		System.out.println("Insira um numero: ");
		int numero = scan.nextInt();

		if (numero > 0) {
			System.out.println("Número inserido: " + numero + " é positivo");
		} else {
			System.out.println("Número inserido: " + numero + " é negativo");
		}
	}

}
